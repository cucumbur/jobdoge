{
  "manifest_version": 2,

  "name": "JobDoge",
  "description": "A friendly app to help filter job posts you're not interested in.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "doge.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.builtinchicago.org/*",
        "http://www.builtinnyc.com/*",
        "http://www.builtinla.com/*",
        "http://www.builtincolorado.com/*",
        "http://*/*",
        "https://*/*"
      ],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
